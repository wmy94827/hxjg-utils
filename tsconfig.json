{
  "compilerOptions": {
    "target": "ES5",
    // "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "downlevelIteration": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@hxjg/utils": ["./src/index.ts"],
      "@hxjg/utils/lib/*": ["./src/*"]
    },
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "strictNullChecks": true
  },
  "exclude": ["node_modules", "lib", "es", "dist", "example"]
}
